.SliderImage
  filter brightness(50%)
  width 100%
  height 50vh !important
.SectionImageTextBanner
  position relative
  & img
    filter brightness(50%)
.ImageTextBanner
  position absolute
  top 50%
  left 50%
  transform translateX(-50%) translateY(-50%)
  width 100%
  color #fff
  text-align center
  & h3
    font-weight bold
@media(min-width 500px)
  .ImageTextBanner h3
    font-size 40px
.MisionVision
  margin-bottom 1em
.Title
  color #3396ff
  text-transform uppercase
  padding-bottom 10px
  border-bottom 1.5px solid #3396ff
  margin-bottom 10px
